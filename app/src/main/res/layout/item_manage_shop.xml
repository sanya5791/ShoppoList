<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:paddingStart="@dimen/padding_small"
    android:paddingEnd="@dimen/padding_small"
    android:paddingTop="@dimen/padding_smallest"
    android:paddingBottom="@dimen/padding_smallest">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_smallest"
        android:layout_marginEnd="@dimen/margin_smallest"
        android:layout_weight="1"
        android:textAppearance="?android:textAppearanceLarge"
        tools:text="Supermarket"/>

    <ImageView
        android:id="@+id/iv_resort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_smallest"
        android:layout_marginEnd="@dimen/margin_smallest"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_smallest"
        android:layout_marginEnd="@dimen/margin_smallest"
        android:src="@android:drawable/ic_menu_delete"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>