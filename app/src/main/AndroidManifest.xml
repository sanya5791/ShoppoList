<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.akhutornoy.shoppinglist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".App"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.addproducts.AddProductsActivity"/>

        <activity
            android:name=".ui.createproduct_onescreen.CreateProductActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_new_product"/>

        <activity
            android:name=".ui.shops.manageshops.ManageShopsActivity"/>

        <activity android:name=".ui.managemeasuretypes.activity.ManageMeasureTypesActivity" />

        <activity android:name=".ui.settings.SettingsActivity" />
    </application>

</manifest>